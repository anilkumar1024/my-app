pipeline{
	agent any
	stages{
		stage("Git Checkout"){
			steps{
				git 'https://github.com/anilkumar1024/hello-world.git'
			}
		}
		stage("Maven build"){
			steps{
				sh "mvn clean package"
			}
		}
		stage("Deploy Tomcat"){
			steps{
				sshagent(['tomcatnew']) {
					sh """
					    scp -o StrictHostKeyChecking=no /var/lib/jenkins/workspace/DECLARATIVE_JOB/webapp/target/webapp.war ec2-user@172.31.42.120:/home/ec2-user/apache-tomcat-8.5.57/webapps/
					    ssh ec2-user@172.31.42.120/home/ec2-user/apache-tomcat-8.5.57/shutdown.sh
					    ssh ec2-user@172.31.42.120/home/ec2-user/apache-tomcat-8.5.57/start.sh
					"""
				}
			}
		}
	}
}
